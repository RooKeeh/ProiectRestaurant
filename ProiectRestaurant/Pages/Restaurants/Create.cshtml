@page
@model ProiectRestaurant.Pages.Restaurants.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Menu Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Restaurant.Dish_Name" class="control-label">Dish:</label>
                <input asp-for="Restaurant.Dish_Name" class="form-control" />
                <span asp-validation-for="Restaurant.Dish_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.ChefsID" class="control-label">Chef:</label>
                <select asp-for="Restaurant.ChefsID" class="form-control" asp-items="ViewBag.ChefsID">
                </select>
                <span asp-validation-for="Restaurant.ChefsID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Price" class="control-label">Price:</label>
                <input asp-for="Restaurant.Price" class="form-control" />
                <span asp-validation-for="Restaurant.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.MenuDate" class="control-label">Added on:</label>
                <input asp-for="Restaurant.MenuDate" class="form-control" />
                <span asp-validation-for="Restaurant.MenuDate" class="textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.FoodTypeID" class="control-label">Remarks:</label>
                <select asp-for="Restaurant.FoodTypeID" class="form-control" asp-items="ViewBag.FoodTypeID">
                </select>
                <span asp-validation-for="Restaurant.FoodTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <div class="table">
                     <table>
                         <tr>
                             @{
                                 int cnt = 0;
                                 foreach (var cat in Model.AssignedCategoryDataList)
                                 {
                                     if (cnt++ % 3 == 0)
                                     {
                                    @:</tr><tr>
                                     }
                                    @:<td>
                                         <input type="checkbox" name="selectedCategories" value="@cat.CategoryID" @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                         @cat.CategoryID @: @cat.Name
                                    @:</td>
                                }
                             @:</tr>
                             }
                     </table>
                 </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
